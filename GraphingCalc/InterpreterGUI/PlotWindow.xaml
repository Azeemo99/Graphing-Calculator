<Window x:Class="InterpreterGUI.PlotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Function Plotter" Height="500" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBox x:Name="FunctionBox" Width="300" Text="1 1" Margin="0,0,10,0"/>
            <Button x:Name="DrawButton" Content="Draw" Width="100" Click="DrawButton_Click"/>
        </StackPanel>

        <Canvas x:Name="PlotCanvas" Grid.Row="1" Background="White" />
    </Grid>
</Window>
